      - name: "named release for DAYO Linux"
        env:
          PR: ${{ github.event_name == 'pull_request' }}
          FORCE_REBUILD: ${{ inputs.force-rebuild }}
        shell: bash
        run: |
          set -euxo pipefail

          if [[ "${PR}" == "true" ]]; then
            echo "Pull request detected. Skipping release creation."
            exit 0
          fi
          rm -f ./SHA256SUMS*
          gh release list --limit 2000 --json tagName > releases.json

          releases=(
            $(
              cat releases.json \
                | jq --arg OS "DAYO" --raw-output '
                  map(
                    select(
                      (.tagName | startswith($OS))
                      and
                      (.tagName != $OS)
                    )
                  )
                  | .[].tagName
                ' \
                | sort -h
            )
          )

          echo "Looking at releases: ${releases[@]}"
          for rel in ${releases[@]}; do
            echo "Fetching SHA256SUMS for release: ${rel}"
            curl --location --fail --output "SHA256SUMS.${rel}" "${RELEASEURL}/${rel}/SHA256SUMS" || touch "SHA256SUMS.${rel}"
          done
          ls ./SHA256SUMS.* | sort -h | xargs cat > SHA256SUMS
          new="$(cat SHA256SUMS | sha256sum)"

          old=""
          echo "Fetching SHA256SUMS from release: DAYO"
          curl --location --fail --output SHA256SUMS.old "${RELEASEURL}/DAYO/SHA256SUMS" || touch SHA256SUMS.old
          old="$(cat SHA256SUMS.old | sha256sum)"
          if [[ "${new}" == "${old}" ]]; then
            echo "No changes for DAYO since last release. Skipping."
          else
            echo "Creating new release: DAYO"

            {
            echo "Versions available:"
            echo "\`\`\`"
            cat ./SHA256SUMS
            echo "\`\`\`"
            } > notes

            gh release delete \
              --cleanup-tag \
              --yes \
              "DAYO" \
              || true

            gh release create \
              --title "DAYO Linux" \
              --notes-file notes \
              "DAYO" \
              --latest=false \
              ./SHA256SUMS
          fi
